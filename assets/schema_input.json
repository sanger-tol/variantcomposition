{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/sanger-tol/variantcomposition/master/assets/schema_input.json",
    "title": "sanger-tol/variantcomposition pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["sample"]
            },
            "datatype": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Data type, and must be one of: 'VCF' or 'gVCF'",
                "meta": ["datatype"]
            },
            "datafile": {
                "type": "string",
                "pattern": "^\\S+\\.(vcf|vcf.gz|g.vcf|g.vcf.gz)$",
                "errorMessage": "Data file cannot contain spaces and must be VCF/gVCF",
                "meta": ["datafile"]
            }
        },
        "required": ["sample", "datatype", "datafile"]
    }
}
